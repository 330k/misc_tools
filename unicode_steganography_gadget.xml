<head>
<meta charset="utf-8"/>
<title>Insert Invisible Characters</title>
<style>
textarea { width: 100%; height: 200px; }
#button { width: 100px; }
</style>
</head>
<body>
<h1>Insert Invisible Characters</h1>
<div>
Input text:
<textarea id="input">これはテストです。</textarea>
</div>
<button id="insert">Insert Invisible Characters</button>
<div>
Output text:
<textarea id="output"></textarea>
</div>
</body>
<script>
'use strict';

document.getElementById('insert').addEventListener('click', insert_button_click, false);

function insert_button_click(){
	document.getElementById('output').value = insert_invisible_char(document.getElementById('input').value);
}
function insert_invisible_char(strinput){
    return strinput.replace(/(.)/g, '$1\u202e\u202d');
}
</script>
